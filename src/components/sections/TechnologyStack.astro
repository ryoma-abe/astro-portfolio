---
import Card from '../Card.astro'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4" title="技術スタック">
  <div class="perspective-1000 h-full w-full">
    <div
      class="cube transform-style-3d animate-spin-slow relative h-full w-full"
    >
      <div
        class="cube-face cube-face-front absolute h-48 w-48 bg-gradient-to-br from-primary to-accent opacity-80"
      >
        <div class="flex h-full items-center justify-center">
          <span class="text-2xl font-bold">Shopify</span>
        </div>
      </div>
      <div
        class="cube-face cube-face-back absolute h-48 w-48 bg-gradient-to-br from-accent to-secondary opacity-80"
      >
        <div class="flex h-full items-center justify-center">
          <span class="text-2xl font-bold">JavaScript</span>
        </div>
      </div>
      <div
        class="cube-face cube-face-right absolute h-48 w-48 bg-gradient-to-br from-secondary to-primary opacity-80"
      >
        <div class="flex h-full items-center justify-center">
          <span class="text-2xl font-bold">PHP</span>
        </div>
      </div>
      <div
        class="cube-face cube-face-left absolute h-48 w-48 bg-gradient-to-br from-primary to-accent opacity-80"
      >
        <div class="flex h-full items-center justify-center">
          <span class="text-2xl font-bold">WordPress</span>
        </div>
      </div>
    </div>
  </div>
</Card>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }

  .transform-style-3d {
    transform-style: preserve-3d;
  }

  .animate-spin-slow {
    animation: spin 15s infinite linear;
  }

  .cube-face {
    backface-visibility: hidden;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .cube-face-front {
    transform: translate(-50%, -50%) translateZ(24px);
  }
  .cube-face-back {
    transform: translate(-50%, -50%) translateZ(-24px) rotateY(180deg);
  }
  .cube-face-right {
    transform: translate(-50%, -50%) translateX(24px) rotateY(90deg);
  }
  .cube-face-left {
    transform: translate(-50%, -50%) translateX(-24px) rotateY(-90deg);
  }

  @keyframes spin {
    from {
      transform: rotateY(0deg);
    }
    to {
      transform: rotateY(360deg);
    }
  }
</style>
